body
  font-family: 'Raleway', sans-serif

#header
  .title
    padding: 10px

    h1
      background-color: $purple
      padding: 10px
      text-align: center

  .nav
    padding: 10px

    ul
      background-color: $purple
      text-align: center

      a
        position: relative
        display: inline-block
        margin: 10px 5px
        padding: 10px 20px
        outline: none
        color: white
        text-decoration: none
        text-transform: uppercase
        letter-spacing: 1px
        font-weight: 400
        text-shadow: 0 0 1px rgba(255,255,255,0.3)
        font-size: 16px
        transition: color 0.3s
        cursor: pointer

        &::before
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 2px
          background: #fff
          content: ''
          transition: top 0.3s

        &::after
          position: absolute
          top: 0
          left: 0
          width: 2px
          height: 2px
          background: #fff
          content: ''
          transition: height 0.3s

        &:hover
          outline: none
          color: $darkPurple

          &::before
            top: 100%
            opacity: 1

          &::after
            height: 100%
        &:focus
          outline: none
